  }
  
  .tabs-content {
    padding: var(--spacing-md);
  }
  
  .actions-footer {
    flex-direction: column;
  }
  
  .actions-left, .actions-right {
    width: 100%;
    justify-content: center;
  }
  
  .modal-content {
