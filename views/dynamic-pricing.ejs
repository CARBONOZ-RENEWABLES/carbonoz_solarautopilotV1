    removeScheduleRow(scheduleId) {
        const scheduleRow = document.querySelector(`[data-schedule-id="${scheduleId}"]`);
        if (scheduleRow) {
            scheduleRow.remove();
            this.showToast('Schedule removed - remember to save settings', 'info');
        }
