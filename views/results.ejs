    <script>
        let currentPeriod = 'week';
        let periodsData = {};
        let charts = {};
        let currentPage = 1;
        let entriesPerPage = 25;
        let totalEntries = 0;
        let currentData = [];

        // Load period data from server
        async function loadPeriodData(period) {
            currentPeriod = period;
            
            // Show loading state
            document.getElementById('loadingOverlay').style.display = 'flex';
            
            try {
                const response = await fetch(`<%= ingress_path %>/api/energy-data/${period}`);
                const result = await response.json();
                
                if (result.success && result.data) {
                    periodsData[period] = result.data;
                    currentData = result.data;
                    totalEntries = result.data.length;
                    currentPage = 1;

                    const stats = calculateStats(result.data);
                    updateStats(stats);
                    updateGauges(stats);
                    updateCharts(result.data);
                    updateTable();
                    
                    // Show data source info
                    console.log(`Loaded ${period} data from ${result.source}:`, result.data.length, 'entries');
                    updateDataSourceIndicator(result.source, result.data.length);
                } else {
                    console.error('Failed to load energy data:', result.error);
                    // Fallback to mock data
                    loadFallbackData(period);
                }
            } catch (error) {
                console.error('Error loading energy data:', error);
                // Fallback to mock data
                loadFallbackData(period);
            } finally {
                document.getElementById('loadingOverlay').style.display = 'none';
            }
        }
        
        // Fallback mock data generator
        function loadFallbackData(period) {
            const days = period === 'day' ? 1 : period === 'week' ? 7 : period === 'month' ? 30 : 365;
            const data = [];
            
            for (let i = 0; i < days; i++) {
                const date = new Date();
                date.setDate(date.getDate() - i);
                
                data.push({
                    date: date.toISOString().split('T')[0],
                    solarEnergy: Math.random() * 50 + 10,
                    gridEnergy: Math.random() * 30 + 5,
                    unavoidableEmissions: Math.random() * 15 + 2,
                    avoidedEmissions: Math.random() * 25 + 5,
                    selfSufficiencyScore: Math.random() * 40 + 60,
                    carbonIntensity: Math.random() * 200 + 300
                });
            }
            
            const fallbackData = data.reverse();
            periodsData[period] = fallbackData;
            currentData = fallbackData;
            totalEntries = fallbackData.length;
            currentPage = 1;

            const stats = calculateStats(fallbackData);
            updateStats(stats);
            updateGauges(stats);
            updateCharts(fallbackData);
            updateTable();
            
            console.log('Using fallback mock data for', period);
        }

        // Calculate statistics
        function calculateStats(data) {
            const totalEmissions = data.reduce((sum, d) => sum + d.unavoidableEmissions, 0);
            const totalAvoided = data.reduce((sum, d) => sum + d.avoidedEmissions, 0);
            const avgEfficiency = data.reduce((sum, d) => sum + d.selfSufficiencyScore, 0) / data.length;
            const totalSolar = data.reduce((sum, d) => sum + d.solarEnergy, 0);
            const totalGrid = data.reduce((sum, d) => sum + d.gridEnergy, 0);
            const avgCarbon = data.reduce((sum, d) => sum + (d.carbonIntensity || 0), 0) / data.length;

            return {
                emissions: totalEmissions,
                avoided: totalAvoided,
                efficiency: avgEfficiency,
                solar: totalSolar,
                grid: totalGrid,
                carbon: avgCarbon
            };
        }

        // Update stats cards
        function updateStats(stats) {
            document.getElementById('stat-emissions').textContent = stats.emissions.toFixed(2);
            document.getElementById('stat-avoided').textContent = stats.avoided.toFixed(2);
            document.getElementById('stat-efficiency').textContent = stats.efficiency.toFixed(1) + '%';
        }

        // Update gauges
        function updateGauges(stats) {
            document.getElementById('gauge-carbon-value').textContent = stats.carbon.toFixed(0);
            document.getElementById('gauge-solar-value').textContent = stats.solar.toFixed(1);

            createGauge('gauge-carbon', stats.carbon, 500, '#f5576c');
            createGauge('gauge-solar', stats.solar, Math.max(stats.solar * 1.5, 50), '#38f9d7');
        }

        // Create gauge chart
        function createGauge(id, value, max, color) {
            const canvas = document.getElementById(id);
            const ctx = canvas.getContext('2d');
            
            if (charts[id]) {
                charts[id].destroy();
            }

            const isDark = document.documentElement.classList.contains('dark-mode');
            const bgColor = isDark ? 'rgba(51, 65, 85, 0.3)' : 'rgba(226, 232, 240, 0.4)';

            charts[id] = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    datasets: [{
                        data: [value, max - value],
                        backgroundColor: [color, bgColor],
                        borderWidth: 0
                    }]
                },
                options: {
                    circumference: 180,
                    rotation: 270,
                    cutout: '75%',
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: { enabled: false }
                    }
                }
            });
        }

        // Update charts
        function updateCharts(data) {
            updateEnergyChart(data);
            updateEmissionsChart(data);
        }

        // Get dynamic colors for dark mode
        function getChartColors() {
            const isDark = document.documentElement.classList.contains('dark-mode');
            return {
                textColor: getComputedStyle(document.documentElement).getPropertyValue('--text-color').trim() || (isDark ? '#f8fafc' : '#1e293b'),
                textSecondary: getComputedStyle(document.documentElement).getPropertyValue('--text-secondary').trim() || (isDark ? '#94a3b8' : '#64748b'),
                borderColor: getComputedStyle(document.documentElement).getPropertyValue('--border-color').trim() || (isDark ? '#334155' : '#e2e8f0'),
                gridColor: isDark ? 'rgba(148, 163, 184, 0.2)' : 'rgba(226, 232, 240, 0.5)'
            };
        }

        // Energy flow chart
        function updateEnergyChart(data) {
            const ctx = document.getElementById('chart-energy');
            
            if (charts['energy']) {
                charts['energy'].destroy();
            }

            const colors = getChartColors();
            const labels = data.map(d => new Date(d.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' }));
            
            charts['energy'] = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Solar Energy',
                        data: data.map(d => d.solarEnergy),
                        borderColor: '#38f9d7',
                        backgroundColor: 'rgba(56, 249, 215, 0.1)',
                        fill: true,
                        tension: 0.4
                    }, {
                        label: 'Grid Energy',
                        data: data.map(d => d.gridEnergy),
                        borderColor: '#4facfe',
                        backgroundColor: 'rgba(79, 172, 254, 0.1)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            labels: { 
                                color: colors.textColor,
                                font: { size: 12, weight: '500' }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: colors.gridColor },
                            ticks: { color: colors.textSecondary },
                            border: { color: colors.borderColor }
                        },
                        x: {
                            grid: { color: colors.gridColor },
                            ticks: { color: colors.textSecondary },
                            border: { color: colors.borderColor }
                        }
                    }
                }
            });
        }

        // Emissions chart
        function updateEmissionsChart(data) {
            const ctx = document.getElementById('chart-emissions');
            
            if (charts['emissions']) {
                charts['emissions'].destroy();
            }

            const colors = getChartColors();
            const totalEmissions = data.reduce((sum, d) => sum + d.unavoidableEmissions, 0);
            const totalAvoided = data.reduce((sum, d) => sum + d.avoidedEmissions, 0);

            charts['emissions'] = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Unavoidable', 'Avoided'],
                    datasets: [{
                        data: [totalEmissions, totalAvoided],
                        backgroundColor: ['#f5576c', '#38f9d7'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { 
                                color: colors.textColor,
                                padding: 20,
                                font: { size: 14, weight: '500' }
                            }
                        }
                    }
                }
            });
        }

        // Update table with pagination
        function updateTable() {
            const tbody = document.getElementById('table-body');
            tbody.innerHTML = '';

            const startIndex = (currentPage - 1) * entriesPerPage;
            const endIndex = Math.min(startIndex + entriesPerPage, totalEntries);
            const pageData = currentData.slice(startIndex, endIndex);

            pageData.forEach((row, index) => {
                const tr = document.createElement('tr');
                const date = new Date(row.date).toLocaleDateString('en-US', { 
                    month: 'short', 
                    day: 'numeric',
                    year: 'numeric'
                });

                const globalIndex = startIndex + index;
                const trend = globalIndex > 0 && currentData[globalIndex - 1] 
                    ? (row.selfSufficiencyScore > currentData[globalIndex - 1].selfSufficiencyScore ? 'up' : 'down')
                    : 'up';

                tr.innerHTML = `
                    <td>${date}</td>
                    <td>${row.solarEnergy.toFixed(2)}</td>
                    <td>${row.gridEnergy.toFixed(2)}</td>
                    <td>${row.unavoidableEmissions.toFixed(2)}</td>
                    <td>${row.avoidedEmissions.toFixed(2)}</td>
                    <td>${row.selfSufficiencyScore.toFixed(1)}%</td>
                    <td>
                        <span class="trend-indicator trend-${trend}">
                            <i class="fas fa-arrow-${trend}"></i>
                        </span>
                    </td>
                `;
                tbody.appendChild(tr);
            });

            updatePaginationInfo();
        }

        // Update pagination info and controls
        function updatePaginationInfo() {
            const startIndex = (currentPage - 1) * entriesPerPage + 1;
            const endIndex = Math.min(currentPage * entriesPerPage, totalEntries);
            
            document.getElementById('pagination-info').textContent = 
                `Showing ${startIndex} to ${endIndex} of ${totalEntries} entries`;
            
            document.getElementById('prev-page').disabled = currentPage === 1;
            document.getElementById('next-page').disabled = currentPage >= Math.ceil(totalEntries / entriesPerPage);
        }

        // Export to CSV
        function exportToCSV() {
            const data = currentData;
            if (!data || data.length === 0) return;

            let csv = 'Date,Solar Energy (kWh),Grid Energy (kWh),Unavoidable Emissions (kg CO₂),Avoided Emissions (kg CO₂),Self-Sufficiency (%),Carbon Intensity (g/kWh)\n';
            
            data.forEach(row => {
                csv += `${row.date},${row.solarEnergy.toFixed(2)},${row.gridEnergy.toFixed(2)},${row.unavoidableEmissions.toFixed(2)},${row.avoidedEmissions.toFixed(2)},${row.selfSufficiencyScore.toFixed(1)},${row.carbonIntensity || 0}\n`;
            });

            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `energy-data-${currentPeriod}-${new Date().toISOString().split('T')[0]}.csv`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }

        // Export to PDF
        function exportToPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            
            const data = currentData;
            if (!data || data.length === 0) return;

            const stats = calculateStats(data);
            
            doc.setFontSize(20);
            doc.text('CARBONOZ Solar Autopilot Report', 20, 30);
            
            doc.setFontSize(14);
            doc.text(`Period: ${currentPeriod.charAt(0).toUpperCase() + currentPeriod.slice(1)}`, 20, 45);
            doc.text(`Generated: ${new Date().toLocaleDateString()}`, 20, 55);
            
            doc.setFontSize(12);
            doc.text('Summary Statistics:', 20, 75);
            doc.text(`Total Emissions: ${stats.emissions.toFixed(2)} kg CO₂`, 30, 85);
            doc.text(`Avoided Emissions: ${stats.avoided.toFixed(2)} kg CO₂`, 30, 95);
            doc.text(`Average Efficiency: ${stats.efficiency.toFixed(1)}%`, 30, 105);
            doc.text(`Total Solar Energy: ${stats.solar.toFixed(2)} kWh`, 30, 115);
            doc.text(`Total Grid Energy: ${stats.grid.toFixed(2)} kWh`, 30, 125);
            
            const tableData = data.slice(0, 20).map(row => [
                new Date(row.date).toLocaleDateString(),
                row.solarEnergy.toFixed(2),
                row.gridEnergy.toFixed(2),
                row.unavoidableEmissions.toFixed(2),
                row.avoidedEmissions.toFixed(2),
                row.selfSufficiencyScore.toFixed(1) + '%'
            ]);
            
            doc.autoTable({
                head: [['Date', 'Solar (kWh)', 'Grid (kWh)', 'Emissions (kg)', 'Avoided (kg)', 'Efficiency']],
                body: tableData,
                startY: 140,
                styles: { fontSize: 8 },
                headStyles: { fillColor: [51, 65, 85] }
            });
            
            doc.save(`energy-report-${currentPeriod}-${new Date().toISOString().split('T')[0]}.pdf`);
        }

        // Refresh charts on theme change
        function refreshChartsForTheme() {
            if (currentData && currentData.length > 0) {
                const stats = calculateStats(currentData);
                updateCharts(currentData);
                updateGauges(stats);
            }
        }

        // Auto-refresh data every 5 minutes
        function startAutoRefresh() {
            setInterval(() => {
                if (currentPeriod) {
                    console.log('Auto-refreshing data for period:', currentPeriod);
                    loadPeriodData(currentPeriod);
                }
            }, 5 * 60 * 1000); // 5 minutes
        }
        
        // Manual refresh function
        function refreshData() {
            if (currentPeriod) {
                // Clear cached data to force fresh fetch
                delete periodsData[currentPeriod];
                loadPeriodData(currentPeriod);
            }
        }
        
        // Add refresh button functionality
        function addRefreshButton() {
            const exportButtons = document.querySelector('.export-buttons');
            if (exportButtons) {
                const refreshBtn = document.createElement('button');
                refreshBtn.className = 'export-btn';
                refreshBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Refresh';
                refreshBtn.addEventListener('click', refreshData);
                exportButtons.insertBefore(refreshBtn, exportButtons.firstChild);
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadPeriodData('week');
            addRefreshButton();
            startAutoRefresh();
            
            // Period tabs
            document.querySelectorAll('[data-period]').forEach(btn => {
                btn.addEventListener('click', function() {
                    const period = this.dataset.period;
                    
                    document.querySelectorAll('[data-period]').forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    
                    loadPeriodData(period);
                });
            });
            
            // Export buttons
            document.getElementById('export-csv').addEventListener('click', exportToCSV);
            document.getElementById('export-pdf').addEventListener('click', exportToPDF);
            
            // Pagination
            document.getElementById('prev-page').addEventListener('click', function() {
                if (currentPage > 1) {
                    currentPage--;
                    updateTable();
                }
            });
            
            document.getElementById('next-page').addEventListener('click', function() {
                if (currentPage < Math.ceil(totalEntries / entriesPerPage)) {
                    currentPage++;
                    updateTable();
                }
            });
            
            // Entries per page
            document.getElementById('entries-per-page').addEventListener('change', function() {
                entriesPerPage = parseInt(this.value);
                currentPage = 1;
                updateTable();
            });
            
            // Listen for theme changes
            const observer = new MutationObserver(function(mutations) {
                mutations.forEach(function(mutation) {
                    if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
                        setTimeout(refreshChartsForTheme, 100);
                    }
                });
            });
            
            observer.observe(document.documentElement, {
                attributes: true,
                attributeFilter: ['class']
            });
        });
    </script>
