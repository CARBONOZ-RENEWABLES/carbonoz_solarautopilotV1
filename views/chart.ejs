<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carbonoz SolarAutopilot</title>
 

 
   <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
   <link rel="stylesheet" href="<%= ingress_path %>/css/main.css">
   <link rel="stylesheet" href="<%= ingress_path %>/css/chart.css">
</head>
<body>
   
    <div class="container">
        <div id="loadingOverlay" class="loading-overlay">
            <div class="loading-spinner"></div>
          </div>
          <div id="pageContent"> </div>
<%- include('partials/sidebar') %>

        <div class="main-container">
           

            <div class="main-content">
                <div class="content-card">
                 

                    <div class="filter-container">
                        <div class="form-group">
                            <label for="from">From:</label>
                            <input type="datetime-local" id="from" name="from">
                        </div>
                        <div class="form-group">
                            <label for="to">To:</label>
                            <input type="datetime-local" id="to" name="to">
                        </div>
                        <div class="form-group">
                            <label for="timezone">Time Zone:</label>
                            <select id="timezone" name="timezone">
                                <option value="UTC">UTC</option>
                                <option value="America/New_York">America/New_York</option>
                                <option value="Europe/London">Europe/London</option>
                                <option value="Asia/Tokyo">Asia/Tokyo</option>
                                <option value="Africa/Kigali">Africa/Kigali</option>
                                <option value="Indian/Mauritius">Indian/Mauritius</option>
                                <option value="America/Cayman">America/Cayman</option>
                            </select>
                        </div>
                        <button onclick="updateIframe()">Apply</button>
                    </div>
                
                    <div class="dashboard-container">
                        <iframe 
                            id="grafanaDashboard"
                            src="http://<%= mqtt_host %>:3001/d/solar_dashboard/solar-dashboard?orgId=1&kiosk=1&refresh=1m&theme=light" 
                            allowfullscreen>
                        </iframe>
                    </div>
                    
                </div>
            </div>

    
        </div>
    </div>
     
    <script>
        // toggle sidebar
    
    const sidebar = document.getElementById('sidebar');
    const toggleSidebar = document.getElementById('toggleSidebar');
    const toggleSwitch = document.getElementById('toggleSwitch');
    
    toggleSidebar.addEventListener('click', () => {
        sidebar.classList.toggle('collapsed');
        toggleSwitch.classList.toggle('active');
    });
    
    
    // loading js
    
    document.addEventListener('DOMContentLoaded', function() {
        const loadingOverlay = document.getElementById('loadingOverlay');
        const pageContent = document.getElementById('pageContent');
      
        // Simulate loading time (you can adjust this as needed)
        setTimeout(() => {
          loadingOverlay.style.display = 'none';
          pageContent.style.display = 'block';
          // Trigger a custom event to signal that the page is ready
          document.dispatchEvent(new Event('pageReady'));
        }, 1500); // 1.5 seconds loading time
      });
       </script>

<script>
    function updateIframe() {
        const from = document.getElementById('from').value;
        const to = document.getElementById('to').value;
        const timezone = document.getElementById('timezone').value;
        const iframe = document.getElementById('grafanaDashboard');

        if (from && to) {
            const fromUnix = new Date(from).getTime();
            const toUnix = new Date(to).getTime();
            iframe.src = `http://<%= mqtt_host %>:3001/d/solar_dashboard/solar-dashboard?orgId=1&kiosk=1&refresh=1m&theme=light&from=${fromUnix}&to=${toUnix}&tz=${timezone}`;
        } else {
            alert("Please select both a start and end time.");
        }
    }
</script>
   

<script>
    // Toggle dark mode
const toggleDarkMode = document.getElementById('toggleDarkMode');
const darkModeSwitch = document.getElementById('darkModeSwitch');

// Function to update Grafana iframes based on dark mode
function updateGrafanaIframes(isDarkMode) {
    const iframes = document.querySelectorAll('iframe');
    iframes.forEach(iframe => {
        let src = iframe.src;

        // Ensure the src always has a theme parameter
        if (src.includes('theme=light')) {
            src = src.replace('theme=light', isDarkMode ? 'theme=dark' : 'theme=light');
        } else if (src.includes('theme=dark')) {
            src = src.replace('theme=dark', isDarkMode ? 'theme=dark' : 'theme=light');
        } else {
            const separator = src.includes('?') ? '&' : '?';
            src += `${separator}theme=${isDarkMode ? 'dark' : 'light'}`;
        }

        iframe.src = src; // reload iframe with the new theme
    });
}

toggleDarkMode.addEventListener('click', () => {
    const isDarkMode = document.body.classList.toggle('dark-mode');
    darkModeSwitch.classList.toggle('active');
    
    // Update Grafana dashboards to match the dark mode setting
    updateGrafanaIframes(isDarkMode);
    
    // Optional: Save the dark mode state in local storage
    if (isDarkMode) {
        localStorage.setItem('dark-mode', 'enabled');
    } else {
        localStorage.setItem('dark-mode', 'disabled');
    }
});

// Check the user's dark mode preference on page load
document.addEventListener('DOMContentLoaded', () => {
    const isDarkMode = localStorage.getItem('dark-mode') === 'enabled';
    if (isDarkMode) {
        document.body.classList.add('dark-mode');
        darkModeSwitch.classList.add('active');
    }
    updateGrafanaIframes(isDarkMode); // always set the correct theme on load
});

</script>
</body>
</html>
